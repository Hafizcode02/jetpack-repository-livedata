<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hafizcode.moviesandtv">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/logo_tmdb"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_tmdb_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <activity android:name=".ui.home.view.HomeActivity" />
        <activity
            android:name=".ui.detail.DetailActivity"
            android:parentActivityName=".ui.home.view.HomeActivity"
            android:theme="@style/Theme.MoviesAndTV" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>